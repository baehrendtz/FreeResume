---
import type { Lang } from '../types';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const t = {
  sv: {
    rights: 'Gratis CV - Alltid gratis',
    app: 'Gå till appen',
    github: 'GitHub',
    cookieSettings: 'Cookieinställningar',
  },
  en: {
    rights: 'Free Resume - Forever Free',
    app: 'Go to the app',
    github: 'GitHub',
    cookieSettings: 'Cookie settings',
  },
}[lang];
---

<footer class="border-t border-gray-100 dark:border-gray-800 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-2">
      <img src="/logowithouttext.png" alt="Free Resume" class="h-6 w-6" />
      <span class="text-sm text-gray-500 dark:text-gray-400">{t.rights}</span>
    </div>
    <div class="flex items-center gap-6">
      <button
        id="cookie-settings-btn"
        type="button"
        class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        {t.cookieSettings}
      </button>
      <a href="https://app.freeresume.eu" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
        {t.app}
      </a>
      <a href="https://github.com/baehrendtz/FreeResume" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
        {t.github}
      </a>
    </div>
    <script>
      document.getElementById('cookie-settings-btn')?.addEventListener('click', () => {
        window.dispatchEvent(new Event('show-cookie-consent'));
      });
    </script>
  </div>
</footer>
