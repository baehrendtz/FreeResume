---
import type { Lang } from '../types';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const t = {
  sv: {
    heading: 'Redo att skapa ditt gratis CV?',
    subtitle: 'LinkedIn-PDF till professionellt CV p√• sekunder. Gratis, utan registrering.',
    cta: 'Skapa ditt CV',
  },
  en: {
    heading: 'Ready to create your free CV?',
    subtitle: 'LinkedIn PDF to professional CV in seconds. Free, no sign-up.',
    cta: 'Create your CV',
  },
}[lang];
---

<section class="py-14 sm:py-20">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
      {t.heading}
    </h2>
    <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
      {t.subtitle}
    </p>
    <div class="mt-8">
      <a
        href="https://app.freeresume.eu"
        class="inline-flex items-center gap-2 bg-brand-600 hover:bg-brand-700 text-white font-semibold px-7 py-3.5 rounded-lg transition-colors"
      >
        {t.cta}
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
