---
interface Props {
  lang: 'sv' | 'en';
}

const { lang } = Astro.props;

const t = {
  sv: {
    headline: 'LinkedIn till CV på sekunder',
    subtitle: 'Ladda upp din LinkedIn-PDF och få ett snyggt CV direkt. Gratis, utan inloggning.',
    cta: 'Skapa ditt CV',
  },
  en: {
    headline: 'LinkedIn to CV in seconds',
    subtitle: 'Upload your LinkedIn PDF and get a clean CV instantly. Free, no sign-up needed.',
    cta: 'Create your CV',
  },
}[lang];
---

<section class="pt-28 pb-10 sm:pt-32 sm:pb-14">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 dark:text-white">
      {t.headline}
    </h1>

    <p class="mt-5 text-lg text-gray-600 dark:text-gray-300 max-w-xl mx-auto">
      {t.subtitle}
    </p>

    <div class="mt-8">
      <a
        href="https://app.freeresume.eu"
        class="inline-flex items-center gap-2 bg-brand-600 hover:bg-brand-700 text-white font-semibold px-7 py-3.5 rounded-lg transition-colors"
      >
        {t.cta}
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
