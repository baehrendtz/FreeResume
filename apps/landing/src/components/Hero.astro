---
import type { Lang } from '../types';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const t = {
  sv: {
    headline: 'LinkedIn till CV på sekunder',
    subtitle: 'Ladda upp din LinkedIn-PDF och få ett professionellt CV direkt. Välj mall, anpassa och ladda ner som PDF.',
    cta: 'Skapa ditt CV',
    trust: ['100% gratis', 'Ingen registrering', 'Open source'],
    imgAlt: 'Free Resume — gratis CV-verktyg som skapar professionella CV från LinkedIn-PDF',
  },
  en: {
    headline: 'LinkedIn to CV in seconds',
    subtitle: 'Upload your LinkedIn PDF and get a professional CV instantly. Choose a template, customize and download as PDF.',
    cta: 'Create your CV',
    trust: ['100% free', 'No sign-up', 'Open source'],
    imgAlt: 'Free Resume — free CV builder that creates professional resumes from LinkedIn PDF',
  },
}[lang];
---

<section class="pt-28 pb-10 sm:pt-32 sm:pb-14">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Text column -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 dark:text-white">
          {t.headline}
        </h1>

        <p class="mt-5 text-lg text-gray-600 dark:text-gray-300 max-w-xl mx-auto lg:mx-0">
          {t.subtitle}
        </p>

        <div class="mt-8">
          <a
            href="https://app.freeresume.eu"
            class="inline-flex items-center gap-2 bg-brand-600 hover:bg-brand-700 text-white font-semibold px-7 py-3.5 rounded-lg transition-colors"
          >
            {t.cta}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>

        <div class="mt-5 flex flex-wrap items-center justify-center lg:justify-start gap-x-4 gap-y-1 text-sm text-gray-500 dark:text-gray-400">
          {t.trust.map((item) => (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
              </svg>
              {item}
            </span>
          ))}
        </div>
      </div>

      <!-- Screenshot column -->
      <div class="relative">
        <div class="rounded-xl shadow-2xl overflow-hidden border border-gray-200 dark:border-gray-700">
          <img
            src="/app-screenshot.webp"
            alt={t.imgAlt}
            width="1200"
            height="800"
            class="w-full h-auto"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
