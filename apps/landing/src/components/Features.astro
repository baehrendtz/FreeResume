---
import type { Lang } from '../types';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const t = {
  sv: {
    heading: 'Varför välja Free Resume?',
    intro: 'Förvandla din LinkedIn-profil till ett professionellt CV — utan konto, utan kostnad.',
    features: [
      {
        title: 'Helt gratis',
        desc: 'Inga dolda avgifter, inga premium-planer, inga vattenstämplar.',
      },
      {
        title: 'Ingen registrering',
        desc: 'Börja direkt — inget konto eller e-post krävs.',
      },
      {
        title: 'Privat och säkert',
        desc: 'Ditt CV skapas i webbläsaren. Ingen data skickas till våra servrar.',
      },
      {
        title: 'LinkedIn-import',
        desc: 'Ladda upp din LinkedIn-PDF så fylls allt i automatiskt.',
      },
      {
        title: 'Professionella mallar',
        desc: 'Flera ATS-vänliga mallar som är enkla att anpassa.',
      },
      {
        title: 'Open source',
        desc: 'Öppen källkod på GitHub. Granska koden eller kör lokalt.',
      },
    ],
  },
  en: {
    heading: 'Why choose Free Resume?',
    intro: 'Turn your LinkedIn profile into a professional CV — no account, no cost.',
    features: [
      {
        title: 'Completely free',
        desc: 'No hidden fees, no premium plans, no watermarks.',
      },
      {
        title: 'No sign-up needed',
        desc: 'Get started instantly — no account or email required.',
      },
      {
        title: 'Private and secure',
        desc: 'Your CV is built in the browser. No data sent to our servers.',
      },
      {
        title: 'LinkedIn import',
        desc: 'Upload your LinkedIn PDF and everything fills in automatically.',
      },
      {
        title: 'Professional templates',
        desc: 'Multiple ATS-friendly templates, easy to customize.',
      },
      {
        title: 'Open source',
        desc: 'Open source on GitHub. Review the code or run it locally.',
      },
    ],
  },
}[lang];

const icons = [
  // Gift
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 1 0 9.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1 1 14.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
  </svg>`,
  // User minus
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M22 10.5h-6m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM4 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 10.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
  </svg>`,
  // Shield
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
  </svg>`,
  // Upload
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
  </svg>`,
  // Layout
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25a2.25 2.25 0 0 1-2.25-2.25v-2.25Z" />
  </svg>`,
  // Code
  `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" />
  </svg>`,
];
---

<section class="py-14 sm:py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
        {t.heading}
      </h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        {t.intro}
      </p>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {t.features.map((feature, i) => (
        <div class="rounded-xl border border-gray-200 dark:border-gray-800 p-6">
          <div class="w-10 h-10 rounded-lg bg-brand-50 dark:bg-brand-950 text-brand-600 dark:text-brand-400 flex items-center justify-center">
            <Fragment set:html={icons[i]} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900 dark:text-white">
            {feature.title}
          </h3>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
            {feature.desc}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
