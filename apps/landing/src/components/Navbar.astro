---
interface Props {
  lang: 'sv' | 'en';
}

const { lang } = Astro.props;

const t = {
  sv: {
    cta: 'Skapa ditt CV',
    langSwitch: 'English',
    langHref: '/en/',
  },
  en: {
    cta: 'Create your CV',
    langSwitch: 'Svenska',
    langHref: '/',
  },
}[lang];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href={lang === 'sv' ? '/' : '/en/'} class="flex items-center">
      <img src="/logo.png" alt="Free Resume â€” Gratis CV-verktyg" class="h-9" />
    </a>
    <div class="flex items-center gap-3">
      <a
        href={t.langHref}
        class="text-sm text-gray-500 hover:text-gray-900 transition-colors px-3 py-1.5 rounded-md hover:bg-gray-50"
      >
        {t.langSwitch}
      </a>
      <a
        href="https://app.freeresume.eu"
        class="inline-flex items-center gap-1.5 bg-brand-600 hover:bg-brand-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition-colors"
      >
        {t.cta}
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</nav>
